visibility = [ "//apps/ledger/src/*" ]

source_set("coroutine") {
  sources = [
    "coroutine.h",
    "coroutine_impl.cc",
    "coroutine_impl.h",
  ]

  public_deps = [
    "//apps/ledger/src/callback",
    "//lib/ftl",
  ]

  deps = [
    "//apps/ledger/src/coroutine/context",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "coroutine_unittest.cc",
  ]

  deps = [
    ":coroutine",
    "//lib/ftl",
    "//third_party/gtest",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}
