visibility = [ "//apps/ledger/src/*" ]

source_set("firebase") {
  sources = [
    "encoding.cc",
    "encoding.h",
    "event_stream.cc",
    "event_stream.h",
    "firebase.h",
    "firebase_impl.cc",
    "firebase_impl.h",
    "status.cc",
    "status.h",
    "watch_client.h",
  ]

  public_deps = [
    "//apps/ledger/src/convert",
    "//apps/ledger/src/network",
    "//third_party/rapidjson",
  ]

  deps = [
    "//apps/ledger/src/callback",
    "//apps/ledger/src/glue/crypto",
    "//apps/ledger/src/glue/socket",
    "//lib/ftl",
    "//lib/mtl",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "encoding_unittest.cc",
    "event_stream_unittest.cc",
    "firebase_impl_unittest.cc",
  ]

  deps = [
    ":firebase",
    "//apps/ledger/src/convert",
    "//apps/ledger/src/glue/socket",
    "//apps/ledger/src/network:fake",
    "//apps/ledger/src/test:lib",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/gtest",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}
